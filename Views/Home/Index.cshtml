<div id="mainDiv">
    <table class="table table-bordered table-striped">
        <thead>
            <tr><th>Name</th><th>Price</th></tr>
        </thead>
        <tbody>
            @foreach (Product p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@($"{p.Price:C2}")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="text-center">
    <a class="btn btn-primary" asp-action="AddProduct">
        Add New Product
    </a>
</div>


